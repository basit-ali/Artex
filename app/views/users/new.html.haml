%h2{:style => "margin-left: 100px;"} Sign in

#sign-in.page{:style => "width:750px; margin-left: 100px;"}

  - form_for user, :action => "/users/sign_in", :class=> "user_new", :id => "user_new", :method => "post" do |f|
    %dl
      %dt= f.label :email
      %dd= f.text_field :email
    %dl
      %dt= f.label :password
      %dd= f.password_field :password
    - if devise_mapping.rememberable?
      %dl
        %dt
          %label{ :for => "user_remember_me" }
            = f.check_box :remember_me
            Remember me
    .actions
      %button(type='submit') Sign in
      %p
        - if devise_mapping.recoverable?
          = link_to "Forgot password?", new_password_path(resource_name)
        -# if devise_mapping.confirmable?
          = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  .service_integration.facebook
    %h4 Facebook Connect
    %p Sign in or register using your Facebook account
    /%p= render :partial => 'shared/fb_login'
  %br{:style => "clear:both;"}