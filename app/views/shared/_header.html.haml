#header
  #logo.fl
    = link_to image_tag("/images/logo.gif", :style => "width: 225px"), root_path
  #navigation.fr
    %ul
      %li
        = link_to "Home", root_path, :class => "#{active_if_match(params[:action], 'index')}"
      %li
        = link_to "About", about_path, :class => "#{active_if_match(params[:action], 'about')}"
      %li
        = link_to "Services", services_path, :class => "#{active_if_match(params[:action], 'services')}"
      %li
        = link_to "Projects", projects_path, :class => "#{active_if_match(params[:action], 'projects')}"
      %li
        %a{:href => "#"} Blog
      %li
        = link_to "Contact", contact_path, :class => "#{active_if_match(params[:action], 'contact')}"
      %li{:style => "border-left: none;"}
        - if user_signed_in?
          = current_user.first_name.present? ? current_user.first_name : current_user.email
        -else
          = link_to 'Sign in', new_user_session_path
      - if user_signed_in?
        %li
          = link_to 'Profile Settings', edit_user_registration_path, :style => "padding-left: 30px;"
      - if user_signed_in?
        %li
          = link_to 'Sign out', destroy_user_session_path, :style => "padding-left: 30px;"
