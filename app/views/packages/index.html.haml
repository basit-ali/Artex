#content.left
  %div
    %img{:height => "30", :src => "/images/strip_03.jpg", :width => "771"}
  %div{:style => "border:1px solid #ccc; padding-bottom:17px;"}
    %ul.products{:style => "padding-left:1px;"}
      - packages.each do |package|
        %li{:style => "width:720px; padding-top:0px; height:240px;background-image:url(img/package_des.jpg);"}
          %ul
            %li.package_list{:style => "height:230px !important; width:190px;"}
              %span.package-new-text
                = package.sub_product.name
              %span.price_heading
                = "$"+ package.sub_product.price.to_s
              %br
              %a{:href => "<?php echo $this->webroot;?>packages/index/<?php echo $id  ?>"}
                %img{:height => "82", :src => "/images/subProductPageImages/#{package.sub_product.image}", :style => "margin-top: 10px; margin-bottom: 6px;", :width => "198"}
                %br
              %span
                = decode_entities (package.sub_product.description).gsub(/<\/?.*?>/,'')
              %br
              %span
                = link_to image_tag("/images/orderImage.png", :style => "margin-top:5px;"), new_order_path
              %br
            %li.package_list{:style => "width:490px;height:230px !important;"}
              %table.pfp
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.name
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.redraws
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.modifications
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.copy_right
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.formats
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.duration
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.delivery
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.general_words
                %tr
                  %td
                    %span
                      %img{:src => "/images/smallArrow.gif"}
                    = package.description
    %br{:style => "clear:both;"}
  %div
    %img{:height => "30", :src => "/images/kdm-inner-page-bottom.jpg", :width => "771"}